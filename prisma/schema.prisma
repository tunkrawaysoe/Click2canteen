generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PREPARING
  DELIVERED
  CANCELLED
}

enum MenuCategory {
  APPETIZER
  MAIN
  DESSERT
  DRINK
  SNACK
}

enum Role {
  SYSTEM_ADMIN
  ADMIN
  CUSTOMER
}

model User {
  id           String      @id @unique
  name         String
  email        String      @unique
  role         Role?
  profileImage String?
  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  phoneNumber  String?
  orders       Order[]
}

model Restaurant {
  id         String   @id @default(cuid())
  name       String   @unique
  phone      String
  address    String
  imageUrl   String?
  qrCodeUrl  String?
  kpayPhones String[]
  isOpen     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  users      User[]
  menus      Menu[]
  orders     Order[]
}

model Menu {
  id           String       @id @default(cuid())
  name         String
  price        Float
  category     MenuCategory
  description  String?
  imageUrl     String?
  isActive     Boolean      @default(true)
  isSpecial    Boolean      @default(false)
  restaurant   Restaurant   @relation(fields: [restaurantId], references: [id])
  restaurantId String
  orderItems   OrderItem[]
  addOns       AddOn[]
  createdAt    DateTime     @default(now())

  @@index([restaurantId])
}

enum ServiceType {
  SELF_SERVICE
  DELIVERY
}

model Order {
  id              String      @id @default(cuid())
  user            User        @relation(fields: [userId], references: [id])
  userId          String
  restaurant      Restaurant  @relation(fields: [restaurantId], references: [id])
  restaurantId    String
  createdAt       DateTime    @default(now())
  status          OrderStatus @default(PENDING)
  totalPrice      Float
  deliveryAddress String?
  phoneNumber     String?
  paymentMethod   String?
  paymentUrl      String?
  serviceType     ServiceType @default(SELF_SERVICE)

  orderItems OrderItem[]

  @@index([restaurantId])
  @@index([userId])
}

model AddOn {
  id              String           @id @default(cuid())
  name            String
  price           Float
  menu            Menu             @relation(fields: [menuId], references: [id])
  menuId          String
  orderItemAddOns OrderItemAddOn[]
}

model OrderItem {
  id              String           @id @default(cuid())
  order           Order            @relation(fields: [orderId], references: [id])
  orderId         String
  menu            Menu             @relation(fields: [menuId], references: [id])
  menuId          String
  quantity        Int
  price           Float
  orderItemAddOns OrderItemAddOn[]
}

model OrderItemAddOn {
  id          String    @id @default(cuid())
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id])
  orderItemId String
  addOn       AddOn     @relation(fields: [addOnId], references: [id])
  addOnId     String
}
